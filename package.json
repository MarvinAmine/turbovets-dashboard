{
  "name": "turbovets-dashboard",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "start:dev": "dotenv -e .env.dev -- npx ts-node-dev -r tsconfig-paths/register -P tsconfig.dev.json apps/api/src/main.ts",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "jest --passWithNoTests",
